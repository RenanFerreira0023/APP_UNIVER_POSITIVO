            <TextView
                android:id="@+id/textDestrezaValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textDestrezaValorAtributoFinal"
