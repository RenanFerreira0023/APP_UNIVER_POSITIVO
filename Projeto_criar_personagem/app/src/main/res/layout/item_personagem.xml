                android:id="@+id/textDestrezaValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Intelig." />

            <TextView
                android:id="@+id/textInteligenciaValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textInteligenciaPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

