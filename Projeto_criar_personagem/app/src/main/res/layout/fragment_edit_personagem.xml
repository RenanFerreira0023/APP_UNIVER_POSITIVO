<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:padding="16dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
        android:text="Editar Personagem"
            android:paddingTop="30sp"
            android:paddingBottom="30sp"
            android:textSize="25sp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/edtNomePersonagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/corBack"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorHint"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/lblTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblNomePersonagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor XP: "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtValorXP"
            android:layout_width="100sp"
            android:layout_height="wrap_content"

            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/corBack"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorHint"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblNomeRaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raça: "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNomeRaca"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/corBack"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Atributo"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Fixo"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pontos Inputados"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Custo"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Bônus"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Atributo Final"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Modificador"
                android:textStyle="bold" />
        </TableRow>

        <!-- Linhas para os atributos -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Força" />

            <EditText
                android:id="@+id/edtForcaValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"

                />

            <EditText
                android:id="@+id/edtForcaPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                />

            <EditText
                android:id="@+id/edtForcaValorCusto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                />

            <EditText
                android:id="@+id/edtForcaValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtForcaValorAtributoFinal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtForcaValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dest." />

            <EditText
                android:id="@+id/edtDestrezaValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtDestrezaPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtDestrezaValorCusto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtDestrezaValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtDestrezaValorAtributoFinal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtDestrezaValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Intelig." />

            <EditText
                android:id="@+id/edtInteligenciaValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtInteligenciaPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtInteligenciaValorCusto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtInteligenciaValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtInteligenciaValorAtributoFinal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtInteligenciaValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carisma" />

            <EditText
                android:id="@+id/edtCarismaValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtCarismaPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtCarismaValorCusto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtCarismaValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtCarismaValorAtributoFinal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtCarismaValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Const." />

            <EditText
                android:id="@+id/edtConstituicaoValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtConstituicaoPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtConstituicaoValorCusto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtConstituicaoValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtConstituicaoValorAtributoFinal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtConstituicaoValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sabedo." />

            <EditText
                android:id="@+id/edtSabedoriaValorFixo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtSabedoriaPontosInputados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtSabedoriaValorCusto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtSabedoriaValorBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtSabedoriaValorAtributoFinal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>

            <EditText
                android:id="@+id/edtSabedoriaValorModificador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/corBack"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"/>
        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
